# ============================================
# Docker MySQL Configuration
# ============================================
# 프로젝트 루트에 .env 파일을 생성하고 이 값을 복사하세요
# cp .env.example .env
# 그리고 실제 비밀번호로 수정하세요

# MySQL Container 설정
MYSQL_CONTAINER_NAME=qrcoffee-mysql-dev
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=qr_coffee_order
MYSQL_USER=qrcoffee
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_PORT=3307

# 타임존 설정
TZ=Asia/Seoul

# ============================================
# Spring Boot Database Configuration
# ============================================
# application.yml에서 사용하는 환경 변수
DB_URL=jdbc:mysql://localhost:3307/qr_coffee_order?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
DB_USERNAME=root
DB_PASSWORD=your_db_password_here
DEV_DB_USERNAME=root
DEV_DB_PASSWORD=your_dev_db_password_here

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1800000
JWT_REFRESH_EXPIRATION=604800000

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000

# ============================================
# Spring Profile
# ============================================
SPRING_PROFILES_ACTIVE=dev

# ============================================
# Docker Compose File (선택사항)
# ============================================
# DOCKER_COMPOSE_FILE=docker-compose.dev.yml
